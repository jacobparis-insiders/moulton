generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  name  String?
  email String @unique
  role  String @default("USER") // USER, CURATOR, EDITOR, ADMIN

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
